{
  "name": "@watson/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "esbuild src/server.ts --bundle --platform=node --target=node20 --outfile=dist/server.js --format=esm --external:@prisma/client --external:bcrypt --external:pino --external:pino-pretty",
    "start": "node dist/server.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@prisma/client": "^5.19.0",
    "@watson/database": "workspace:*",
    "@watson/shared": "workspace:*",
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^8.0.0",
    "@fastify/multipart": "^8.1.0",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/sensible": "^5.5.0",
    "@fastify/websocket": "^10.0.1",
    "@google/generative-ai": "^0.24.1",
    "bcrypt": "^5.1.1",
    "fastify": "^4.26.0",
    "fastify-plugin": "^4.5.1",
    "node-fetch": "^3.3.2",
    "pino": "^8.18.0",
    "pino-pretty": "^10.3.1",
    "socket.io": "^4.7.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^20.11.0",
    "esbuild": "^0.20.0",
    "tsc-alias": "^1.8.8",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
