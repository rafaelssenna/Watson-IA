{
  "name": "watson-ai",
  "version": "0.1.0",
  "private": true,
  "description": "Watson AI - Sistema Operacional de Atendimento Inteligente",
  "scripts": {
    "postinstall": "pnpm db:generate",
    "dev": "turbo run dev",
    "build": "turbo run build --filter=@watson/api",
    "start": "node apps/api/dist/server.js",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "db:generate": "turbo run db:generate",
    "db:push": "turbo run db:push",
    "db:studio": "pnpm --filter @watson/database db:studio",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "typescript": "^5.3.3",
    "prettier": "^3.2.5",
    "@types/node": "^20.11.0"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20.0.0"
  }
}
